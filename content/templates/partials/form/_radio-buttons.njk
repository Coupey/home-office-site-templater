{% macro radio_component(data = '') %}

<div id="{{data.field_id}}-form-group" class="form-group {{data.classes}}" {{data.attributes}}>   
  <fieldset>
    <legend class="form-label-bold">
      {{data.label}}
    </legend>
    <div class="form-hint">
      {{data.help}}
    </div>
    <div id="{{data.field_id}}-error-message" class="form-error validation-message">
      {{data.error}}
    </div>
    {% for option in data.options %}
      <div class="radio-group">
        <label class="block-label" for="{{data.field_id}}-{{loop.index}}" {% if option.reveal_target %} data-target="{{option.reveal_target}}"{% endif %}>
          <input id="{{data.field_id}}-{{loop.index}}" type="radio" name="{{data.field_id}}" value="{{option.optionlabel}}" data-parsley-multiple="{{data.field_id}}" 
          {% for item in data.parsley_validation %}data-parsley-{{ item.validator }}="{{ item.value }}"
          data-parsley-{{ item.validator }}-message="{{ item.error_message }}" {% endfor %}
          data-parsley-class-handler="#{{data.field_id}}-form-group" 
          data-parsley-errors-container="#{{data.field_id}}-error-message" />
          {{option.optionlabel}}
        </label>
      </div>
    {% endfor %}

  </fieldset>
</div>

{% endmacro %}
